<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Gestor de ventas productos</display-name>
  <filter-name>filtro general</filter-name>
  
  <session-config>
        <session-timeout>15</session-timeout>
  </session-config>
 
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>com.viajando.controller.HomeController</servlet-class>
  </servlet>
	
  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
	
  <filter>
	    <filter-name>MyFilter</filter-name>
	    <filter-class>com.viajando.filters.ServletFilter</filter-class>
  </filter>

  <filter-mapping>
	<filter-name>MyFilter</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>
	
  <welcome-file-list>
	<welcome-file>/galeria.do</welcome-file>
  </welcome-file-list>
 

</web-app>
